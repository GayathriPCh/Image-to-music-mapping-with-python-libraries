<script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1"></script>
   <script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1"></script>
<script>
    // scripts.js content
    document.addEventListener("DOMContentLoaded", function () {
        // Function to fade out an element
        function fadeOut(element) {
            anime({
                targets: element,
                opacity: 0,
                duration: 500,
                easing: 'easeOutQuad'
            });
        }

        // Function to fade in an element
        function fadeIn(element) {
            anime({
                targets: element,
                opacity: 1,
                duration: 500,
                easing: 'easeInQuad'
            });
        }

        // Top bar animation
        const topBar = document.querySelector('.top-bar');

        topBar.addEventListener('mouseenter', function () {
            fadeIn(topBar);
        });

        topBar.addEventListener('mouseleave', function () {
            fadeOut(topBar);
        });

        // Header animation
        const mainHeader = document.querySelector('.main-header');

        anime({
            targets: mainHeader,
            opacity: 1,
            duration: 1000,
            delay: 500
        });

        // Introduction section animation
        const introSection = document.querySelector('.intro-section');

        anime({
            targets: introSection,
            opacity: 1,
            duration: 1000,
            delay: 1000
        });

        // Features section animation
        const featureBoxes = document.querySelectorAll('.feature-box');

        featureBoxes.forEach((box, index) => {
            anime({
                targets: box,
                opacity: 1,
                translateY: 0,
                duration: 1000,
                delay: index * 200
            });
        });

        // How it Works section animation
        const howItWorksSection = document.querySelector('.how-it-works-section');

        anime({
            targets: howItWorksSection,
            opacity: 1,
            duration: 1000,
            delay: 1000
        });

        // Steps animation
        const stepBoxes = document.querySelectorAll('.step-box');

        stepBoxes.forEach((box, index) => {
            anime({
                targets: box,
                opacity: 1,
                translateY: 0,
                duration: 1000,
                delay: index * 200
            });
        });

        // Upload section animation
        const uploadSection = document.querySelector('.upload-section');

        anime({
            targets: uploadSection,
            opacity: 1,
            duration: 1000,
            delay: 1000
        });

        // Why BeatWave section animation
        const whyBeatWaveSection = document.querySelector('.why-beatwave-section');

        anime({
            targets: whyBeatWaveSection,
            opacity: 1,
            duration: 1000,
            delay: 1000
        });

        // Points animation
        const pointBoxes = document.querySelectorAll('.point-box');

        pointBoxes.forEach((box, index) => {
            anime({
                targets: box,
                opacity: 1,
                translateY: 0,
                duration: 1000,
                delay: index * 200
            });
        });

        // Logo section animation
        const logoSection = document.querySelector('.logo-section');

        anime({
            targets: logoSection,
            opacity: 1,
            duration: 1000,
            delay: 1000
        });

        // Bigger logo animation
        const biggerLogo = document.querySelector('.bigger-logo');

        anime({
            targets: biggerLogo,
            opacity: 1,
            translateY: 0,
            duration: 1000,
            delay: 1000
        });

        // Team name animation
        const teamName = document.querySelector('.team-name');

        anime({
            targets: teamName,
            opacity: 1,
            duration: 1000,
            delay: 2000
        });
    });
</script>


